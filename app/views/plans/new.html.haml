.new-travel
  %h1.text-center新規旅行の企画
  .container
    .new-travel__enlist
      = form_for(@plan) do |f|
        - if @plan.errors.any?
          - @plan.errors.full_messages.each do |message|
            .red.text-center
              = message
        .new-travel__enlist__field
          = f.label :企画名
          = f.text_field :title
        .new-travel__enlist__img
          = f.label :アイキャッチ画像
          = f.file_field :image
        .new-travel__enlist__field
          = f.label :開催日	
          = f.text_field :date
        .new-travel__enlist__field
          = f.label :旅行先
          = f.text_field :place
        .new-travel__enlist__field
          = f.label :集合場所
          = f.text_field :meeting_place
        .new-travel__enlist__field
          = f.label :集合時間
          = f.text_field :meeting_time
        .new-travel__enlist__field
          = f.label :企画内容
        .new-travel__enlist__text-area
          = f.text_area  :content
        = f.submit "企画する",class: 'sign-btn btn btn-info'