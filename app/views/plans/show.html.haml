.travel-detail
  .container
    .travel-detail__contents
      .travel-detail__contents__main
        %h1 
          =@plan.title
        = image_tag @plan.image.to_s
        %table
          %tr
            %th 開催日
            %td
              =@plan.date
          %tr
            %th 集合場所
            %td 
              =@plan.meeting_place
          %tr
            %th 集合時間
            %td
              =@plan.meeting_time
          %tr
            %th 企画内容
            %td.text-left.p-3
              =simple_format(@plan.content)
        .text-center
          %button.btn.btn-danger.btn-lg.mt-5.text-center{type:"button"}
            = link_to "この企画に申し込む"
      .travel-detail__contents__sub 
        %h2
          おすすめの旅行企画
        %hr
        - @random.each do |plan|
          =image_tag plan.image.to_s
          %h3
            = link_to plan_path(plan) do
              = plan.title

